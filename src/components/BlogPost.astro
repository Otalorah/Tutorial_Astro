---
const { url, title } = Astro.props;
---

<li>
    <a href={url}>{title}</a>
</li>
<style>
    li {
        max-width: 50%;
        border-radius: 10px;
        margin: 10px;
        box-shadow: 0px 0px 5px #4c1d95;
    }
    li:hover{
        background-color: #4c1d95;
    }
    li:hover a{
        color: #fff;
    }
    a {
        text-decoration: none;
        height: 30px;
        padding: 10px;
        color: #4c1d95;
    }
</style>
